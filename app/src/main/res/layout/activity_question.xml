<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e8e8"
    tools:context=".Question"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#50c0d1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/dp4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Simran kaur"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="12dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiz"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="70dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="0dp"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/question_question_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2 / 10"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/question_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Total number of awards win by Satyajit ray in National award film ?"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#333"
                android:textSize="16dp"
                android:layout_marginRight="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp">

                <androidx.cardview.widget.CardView                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_choice1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="14dp"
                        android:textColor="#333" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_choice2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="32"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="14dp"
                        android:textColor="#333" />

                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_choice3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="12"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="14dp"
                        android:textColor="#333" />

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/question_choice4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="08"
                        android:gravity="center_vertical|center_horizontal"
                        android:textSize="14dp"
                        android:textColor="#333" />

                </androidx.cardview.widget.CardView>




            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/question_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="500dp"
        android:text="Confirm Answer"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="#50c0d1"
        android:textSize="18sp" />



</RelativeLayout>
